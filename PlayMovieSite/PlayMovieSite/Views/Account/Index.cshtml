@model PlayMovieSite.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Index - PlayMovie</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <script src="../JavaScript/JavaScript.js"></script>
    <style>
        body {
            background-color: transparent;
        }

        .generalDiv {
            margin-top: 50px;
        }

        /* TITULO: PLAYMOVIE */
        .PlayMovie {
            display: flex;
            font-family: 'Book Antiqua';
        }

        #Play {
            font-weight: bold;
            color: #FECA76;
        }

        #Movie {
            font-weight: bold;
            color: white;
        }

        .subtitulo {
            display: flex;
            font-family: 'Book Antiqua';
            width: 30%;
        }

        #sientete {
            font-weight: bold;
            color: white;
        }

        #premium {
            font-weight: bold;
            color: #FECA76;
        }

        .nombreSitio {
        }


         /* ENCABEZADO */
         .container {
            position: relative;
         }

        .encabezado {
            height: 80px;
            display: flex;
            flex-direction: row;
            justify-content: center;
            background-color: black;
            position: absolute;
            top: 40%;  /**Nivel de altura */
            left: 40%;  /*Desplazamiendo hacia la izquierda*/
            margin: -30px 0 0 -30px;
        }

        #conviertete {
            font-weight: bold;
            justify-content: right;
            font-family: 'Book Antiqua';
            color: white;
            font-weight: bold;
        }

        #Premium {
            font-weight: bold;
            color: #FECA76;
            font-family: 'Book Antiqua';
            font-weight: bold;
        }

         /* BOTONES */
        .opciones {
            display: flex;
            flex-direction: row;
            margin-top: 100px;
            justify-content: space-between;
            background-color: black;
         }

        .btn {
            text-decoration-color: none;
            border-radius: 20px;
            width: 300px;
            height: 200px;
            font-family: 'Book Antiqua';
            background-color: white;
            font-size: 30px;
            text-align: center;
            color: black;
            line-height: 200px; /*Para centrar verticalmente el texto*/
            font-weight: bold;
        }

        .btn:hover {
            background-color: darkgoldenrod;
            color: white;
        }

        #btntexto {
            font-family: 'Book Antiqua';
            font-weight: bold;
            color: white;
            font-size: 30px;
            position: absolute;
            left: 35%;
            text-decoration: none;
        }

        #btntexto:hover {
            color: #FECA76;
            font-weight: bold;
            text-decoration: none;
        }

         /* CUENTA */
        .cuenta {
            justify-content: center;
            text-align: center;
            background-color: silver;
            width: 20%;
            top: 15%;
            left: 90%;
            transform: translate(-15% -90%);
        }

        /* AVATAR */ 
        #avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }

        #imgUserH {
            width: 50px;
            height: 50px;
        }
    </style>
</head>


<body>

    <header>

        <div class="dropdown text-center">
            <button class="dropdown-toggle" href="#" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                Menu
            </button>

            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item" href="#">Action</a></li>
                <li><a class="dropdown-item" href="#">Another action</a></li>
                <li><a class="dropdown-item" href="#">Something else here</a></li>
            </ul>
        </div>

    </header>

    <div class="generalDiv">
        <div class="container">
            <div class="encabezado">
                <h1 id="conviertete">Convierte a &#160;</h1>
                <h1 id="Premium">Premium</h1>
            </div>
            <div class="nombreSitio">
                <div class="PlayMovie">
                    <h1 id="Play">Play</h1>
                    <h1 id="Movie">Movie</h1>
                </div>
                <div class="subtitulo">
                    <h2 id="sientete">Siéntete &#160;</h2> @*&#160; Es para dar un espacio*@
                    <h2 id="premium">Premium</h2>
                </div>
            </div>
        </div>
        <div class="opciones">
            <a class="btn btn-warning" href="https://localhost:44303/Account/Card" id="a1">$ 10.00 Mes</a>
            <a class="btn btn-warning" href="https://localhost:44303/Account/Card" id="a2">$ 56.00 6 Meses</a>
            <a class="btn btn-warning" href="https://localhost:44303/Account/Card" id="a3">$ 100.00 1 Año</a>
        </div>
        <br /><br /><br /><br /><br />
        <a id="btntexto" href="https://localhost:44303/View/Movies">Continuar de forma gratuita</a>
    </div>
</body>
</html>
